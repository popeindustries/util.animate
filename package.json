{
  "name": "util.animate",
  "description": "Cross-browser animation engine, using CSS transitions where possible",
  "version": "0.0.2",
  "author": "Thomas Lein <thomaslein@gmail.com>",
  "dependencies": {
    "util.easing": "git://github.com/thomaslein/util.easing.git",
    "util.identify": "git://github.com/thomaslein/util.identify.git",
    "dom.style": "git://github.com/thomaslein/dom.style.git"
  },
  "devDependencies": {
    "requestAnimationFrame": "git://github.com/thomaslein/requestAnimationFrame",
    "mocha": "*",
    "expect.js": "*",
    "buddy": "*",
    "mocha-sauce": "git://github.com/pbakaus/mocha-sauce.git",
    "term-canvas": "*"
  },
  "main": "index.js",
  "repository": "git://github.com/thomaslein/util.animate.git",
  "scripts": {
    "test": "buddy build && mocha-phantomjs test/test-runner.html -t 4000",
    "sauce": "node test/sauce.js"
  },
  "buddy": {
    "build": {
      "js": {
        "targets": [{
          "input": "test/src/index.js",
          "output": "test/animate.js",
          "boilerplate": true,
          "bootstrap": true
        }]
      }
    },
    "server": {
      "directory": ".",
      "port": 8000
    }
  }
}
